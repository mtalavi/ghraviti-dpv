# Coolify Deployment Configuration
# ==================================
# Set these as Environment Variables in Coolify, NOT in this file!
# This file is just a template showing required variables.

# Database Connection
DB_HOST=mysql
DB_PORT=3306
DB_NAME=dpvhub
DB_USER=mysql
DB_PASS=your_password_here

# App Settings
APP_URL=https://dpv.yourdomain.com
APP_ENV=production

# Encryption Key (32 bytes, base64 encoded)
# Generate with: php -r "echo base64_encode(random_bytes(32));"
ENCRYPTION_KEY=your_base64_encoded_key

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your@email.com
MAIL_PASS=app_password
MAIL_FROM=noreply@yourdomain.com
